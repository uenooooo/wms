<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="wms.mapper.ProductCustomMapper">
	<insert id="insertSelectiveAndGetProductId" parameterType="wms.model.Product"
		useGeneratedKeys="true" keyProperty="productId">
		INSERT INTO product
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="productCd != null">product_cd,</if>
			<if test="productName != null">product_name,</if>
			<if test="price != null">price,</if>
			<if test="crePrg != null">cre_prg,</if>
		</trim>
		<trim prefix="VALUES (" suffix=")" suffixOverrides=",">
			<if test="productCd != null">#{productCd},</if>
			<if test="productName != null">#{productName},</if>
			<if test="price != null">#{price},</if>
			<if test="crePrg != null">#{crePrg},</if>
		</trim>
	</insert>
	<select id="existsProductCdExcludingId" parameterType="map" resultType="boolean">
	    SELECT EXISTS (
	        SELECT 1
	        FROM product
	        WHERE product_cd = #{productCd}
	        <if test="productId != null">
	            AND product_id &lt;&gt; #{productId}
	        </if>
	    )
	</select>
</mapper>
