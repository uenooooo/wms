{
	"name": "Java 21 & Spring Boot (PostgreSQL)",
	"dockerComposeFile": "docker-compose.yml",
	"service": "app",
	"workspaceFolder": "/workspace",

	"customizations": {
		"vscode": {
			"extensions": [
				"vscjava.vscode-java-pack",      // Java Extension Pack
				"vscjava.vscode-spring-boot-dashboard", // Spring Boot管理
				"vscjava.vscode-spring-initializr",
				"vscjava.vscode-gradle",         // Gradleサポート
				"mtakada0.mybatis-xml-reloader", // MyBatis用
				"ckolkman.vscode-postgresql"      // VS CodeからDB操作
			],
			"settings": {
				"java.configuration.runtimes": [
					{
						"name": "JavaSE-21",
						"path": "/usr/local/sdkman/candidates/java/current",
						"default": true
					}
				]
			}
		}
	},

	"remoteUser": "vscode"
}